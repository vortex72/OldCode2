@model eClub.Models.SECUserModel

@{
    ViewBag.Title = "Nuevo Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using eClub.L10nResources

<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
        </h1>
        <ol class="breadcrumb">
            <li>@Html.ActionLink(" " + CCResources.loc_Start, "Index", "Home", new { @class = "fa fa-dashboard" })</li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="box box-primary">
                <div class="box-header with-border">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-2">
                            @Html.Label(CCResources.login_Username, htmlAttributes: new { @class = "control-label h6" })
                            @Html.EditorFor(model => model.SECUser_Username, new { htmlAttributes = new { @class = "form-control input-sm", @style = "text-transform:uppercase ;" } })
                            @Html.ValidationMessageFor(model => model.SECUser_Username, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-2">
                            @Html.Label(CCResources.login_Password, htmlAttributes: new { @class = "control-label h6" })
                            @Html.EditorFor(model => model.SECUser_Password, new { htmlAttributes = new { @class = "form-control input-sm", @style = "text-transform:uppercase ;" } })
                            @Html.ValidationMessageFor(model => model.SECUser_Username, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-3">
                            @Html.Label(CCResources.user_FirstName, htmlAttributes: new { @class = "control-label h6" })
                            @Html.EditorFor(model => model.SECUser_FirstName, new { htmlAttributes = new { @class = "form-control input-sm" } })
                            @Html.ValidationMessageFor(model => model.SECUser_FirstName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-3">
                            @Html.Label(CCResources.user_LastName, htmlAttributes: new { @class = "control-label h6" })
                            @Html.EditorFor(model => model.SECUser_LastName, new { htmlAttributes = new { @class = "form-control input-sm" } })
                            @Html.ValidationMessageFor(model => model.SECUser_LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            @Html.Label(CCResources.user_Email, htmlAttributes: new { @class = "control-label h6" })
                            @Html.EditorFor(model => model.SECUser_CorpEMail, new { htmlAttributes = new { @class = "form-control input-sm" } })
                            @Html.ValidationMessageFor(model => model.SECUser_CorpEMail, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-3">
                            @Html.Label(CCResources.user_Email, htmlAttributes: new { @class = "control-label h6" })
                            @Html.EditorFor(model => model.SECUser_PrvtEMail, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SECUser_PrvtEMail, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-2">
                            @Html.Label(CCResources.user_Phone, htmlAttributes: new { @class = "control-label h6" })
                            @Html.EditorFor(model => model.SECUser_PrimaryPhone, new { htmlAttributes = new { @class = "form-control input-sm" } })
                            @Html.ValidationMessageFor(model => model.SECUser_PrimaryPhone, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-2">
                            @Html.Label(CCResources.user_Phone, htmlAttributes: new { @class = "control-label h6" })
                            @Html.EditorFor(model => model.SECUser_CellPhone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SECUser_CellPhone, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-2">
                            @Html.Label(CCResources.user_PwdExpDate, htmlAttributes: new { @class = "control-label h6" })
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control pull-right input-daterange input-sm" id="ProdDateRange">
                            </div><!-- /.input group -->
                        </div><!-- /.form group -->
                    </div>
                </div>
                <div class="box-footer">
                    @using (Html.BeginForm("Create", "ApplicationUsers", FormMethod.Post, new { product = Model }))
                    {
                        @Html.AntiForgeryToken();
                        <button type="submit" name="btnCreate" class="btn btn-twitter fa fa-plus-square"> @CCResources.gen_Save</button>
                        @Html.ActionLink(" " + CCResources.gen_Back, "Index", null, new { @class = "btn btn-twitter fa fa-caret-square-o-left" })
                    }
                </div>
            </div>
        </div>
    </section>
</aside>

@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/daterangepicker")
@Scripts.Render("~/bundles/datepicker")

<script>
    $(function () {
        //Date range picker
        $('#ProdDateRange').daterangepicker();
    });
</script>
