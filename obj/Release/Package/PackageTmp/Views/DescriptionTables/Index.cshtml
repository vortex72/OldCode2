@model IEnumerable<eClub.Models.DescriptionTables>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using eClub.L10nResources

<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="#">Tablas</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Tablas</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>@CCResources.gen_Spanish</th>
                                    <th>@CCResources.gen_English</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.DescTableSpanish)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DescTableEnglish)</td>
                                        <td>
                                            @Html.ActionLink(CCResources.gen_Edit, "Edit", new { id = item.DescTableID }) |
                                            @Html.ActionLink(CCResources.gen_Delete, "Delete", new { id = item.DescTableID })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</aside>
