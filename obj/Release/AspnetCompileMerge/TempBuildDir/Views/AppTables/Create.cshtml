@model CCCore.Models.DescriptionTables

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = (string)Session["MTDesc"]; ;
}
@using CCCore.L10nResources

<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Tablas</h1>
        <ol class="breadcrumb">
            <li>@Html.ActionLink(" " + CCResources.loc_Start, "Index", "Home", new { @class = "fa fa-dashboard" })</li>
            <li><a href="#">Tablas</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <div class="box-body table-responsive">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row col-md-12">
                    <div class="col-md-1">
                        @Html.Label(CCResources.gen_Spanish, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-11">
                        @Html.EditorFor(model => model.DescTableSpanish, new { htmlAttributes = new { @class = "form-control", @style = "text-transform:uppercase ;" } })
                        @Html.ValidationMessageFor(model => model.DescTableSpanish, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="row col-md-12">
                    <div class="col-md-1">
                        @Html.Label(CCResources.gen_English, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-11">
                        @Html.EditorFor(model => model.DescTableEnglish, new { htmlAttributes = new { @class = "form-control", @style = "text-transform:uppercase ;" } })
                        @Html.ValidationMessageFor(model => model.DescTableEnglish, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="box-footer">
                @{ using (Html.BeginForm("Create", "AppTables", FormMethod.Post, new { descriptionTables = Model }))
                    {
                        @Html.AntiForgeryToken();
                        <button type="submit" name="btnCreate" class="btn btn-twitter fa fa-floppy-o"> @CCResources.gen_Save</button>
                        @Html.ActionLink(" " + CCResources.gen_Back, "Details", null, new { id = (int)Session["MTId"] }, new { @class = "btn btn-twitter fa fa-caret-square-o-left" });
                    }
                }
            </div>
        </div>
    </section>
</aside>

@Scripts.Render("~/bundles/jqueryval")