@model eClub.Models.ProductComponentsViewModel

@{
    ViewBag.Title = Model.ProductName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using eClub.L10nResources

<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")" class="fa fa-dashboard"> @CCResources.loc_Start</a></li>
            <li><a href="@Url.Action("Index", "mProducts")"> @CCResources.product</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </section>
    <section class="content">
        @using (Html.BeginForm("Details", "mProducts", FormMethod.Post, new { id = Model.ProductID }))
        {
            <div class="row">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.ProductID, new { htmlAttributes = new { @class = "form-control selectlist" } })
                            </div>
                        </div>
                        <div class="row">
                            @*<div class="col-md-6">                                
                                @Html.ListBoxFor(model => model.SubProductID, Model.ProductSubProducts.AsEnumerable(), new { htmlAttributes = new { @class = "form-control input-sm", @style = "text-transform:uppercase ;" } })
                            </div>
                            <div class="col-md-6">
                                @Html.ListBoxFor(model => model.BenefitID, Model.ProductBenefits, new { htmlAttributes = new { @class = "form-control input-sm", @style = "text-transform:uppercase ;" } })
                            </div>*@
                        </div>
                    </div>
                    <div class="box-footer">
                            @Html.AntiForgeryToken();
                            <button type="submit" name="btnEdit" class="btn btn-twitter fa fa-pencil-square-o"> @CCResources.gen_Save</button>
                            @Html.ActionLink(" " + CCResources.gen_Back, "Index", null, new { @class = "btn btn-twitter fa fa-caret-square-o-left" })
                    </div>
                </div>
            </div>
        }
    </section>
</aside>
