@model CCCore.Models.DescriptionTables

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using CCCore.L10nResources

<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Tablas</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="#">Tablas</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">@ViewBag.Title</h3>
                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.Label(CCResources.gen_Spanish, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.DescTableSpanish, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DescTableSpanish, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.Label(CCResources.gen_English, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.DescTableEnglish, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DescTableEnglish, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    @using (Html.BeginForm("Create", "DescriptionTables"))
                                    {
                                        <input type="button" value="Submit" class="btn btn-twitter"/>
                                    }
                                    @*@Html.ActionLink(CCResources.gen_Save, "Create", new { @class = "btn btn-facebook" }))*@
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-header -->
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                @Html.ActionLink(CCResources.gen_Back, "Details", "AppTables")
            </div>
        </div>
    </section>
</aside>

@Scripts.Render("~/bundles/jqueryval")